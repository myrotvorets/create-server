{
    "compilerOptions": {
        "target": "es2019",
        "module": "CommonJS",
        "outDir": "./dist",
        "sourceMap": true,
        "rootDir": "./src",
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": false,
        "typeRoots": [
            "./node_modules/@types/"
        ]
    },
    "compileOnSave": true
}
